    "version": "0.2.0",
    "configurations": [
        {
            "name": "add source",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cocmd"
                ],
                "filter": {
                    "name": "cocmd",
                    "kind": "bin"
                }
            },
            "args": [
                "add",
                "source",
                "demo",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "run",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cocmd"
                ],
                "filter": {
                    "name": "cocmd",
                    "kind": "bin"
                }
            },
            "args": [
                "run",
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}